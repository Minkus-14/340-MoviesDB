<html>
<head>
    <title>MoviesDB</title>
</head>
<body>
    <h1>MoviesDB</h1>
    <h2>Genres</h2>
    <p>Links to other pages:</p>
    <p><a href="{{ url_for('root') }}">Movies</a>
    <a href="{{ url_for('actors') }}">Actors</a>
    <a href="{{ url_for('directors') }}">Directors</a></p>
</body>
<table>
    <thead>
    <tr>
        <th>Genre ID</th>
        <th>Genre Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <tbody>
    {% for item in genres %}
    <tr>
        <td>{{item['idGenre']}}</td>
        <td>{{item['genreName']}}</td>
        <td><input type="submit" value="Edit" name="action1"/></td>
        <td><input type="submit" value="Delete" name="action1"/></td>
    </tr>
    {% endfor %}
</table>
<input type="submit" value="Add Genre" name="action1"/>
</html>